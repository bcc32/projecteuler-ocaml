(library
 (name euler_solutions)
 (synopsis "A collection of OCaml solutions to ProjectEuler problems")
 (libraries
  bignum
  core
  euler
  euler_data
  re)
 (preprocess (pps ppx_jane))
 (inline_tests)
 (modules (:standard \ template)))

(rule
 (targets euler_solutions.ml)
 (deps (:script module-list.pl) (:ml-files (glob_files sol*.ml)))
 (action (with-stdout-to %{targets} (run perl %{script} %{ml-files}))))
